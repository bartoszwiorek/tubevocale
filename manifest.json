{
  "manifest_version": 3,
  "name": "TubeVocale",
  "version": "1.0",
  "description": "Switch the audio of mobile YouTube videos to your preferred language, without affecting the interface.",
  "permissions": ["storage", "tabs", "scripting", "storage"],
  "author": "Bartosz Wiorek",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "host_permissions": ["*://m.youtube.com/watch*"],
  "content_scripts": [
    {
      "matches": ["*://m.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "TubeVocale",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@tubevocale",
      "strict_min_version": "113.0"
    }
  }
}
