{
  "manifest_version": 3,
  "name": "tubevocale",
  "version": "1.0",
  "description": "Easily switch YouTube video audio to your preferred language without affecting the site interface.",
  "permissions": ["storage", "tabs", "scripting"],
  "author": "Bartosz Wiorek",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["index.js"]
    }
  ],
  "action": {
    "default_title": "YouTube Language Switcher"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@tubevocale",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "id": "@tubevocale",
      "strict_min_version": "110.0"
    }
  }
}
